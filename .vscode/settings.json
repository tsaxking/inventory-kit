{
    "colorMyText.configurations": [
        {
            "paths": [
                "*.html"
            ],
            "rules": [
                {
                    "patterns": [
                        // all data in {{ }}
                        "\\{\\{ [^}]+\\}\\}",
                    ],
                    "color": "Blue"
                },
                {
                    // All <repeat> tags
                    "patterns": [
                        "<repeat(?:[^>\"']|\"[^\"]*\"|'[^']*')*>",
                        "</repeat>",
                        "<if(?:[^>\"']|\"[^\"]*\"|'[^']*')*>",
                        "</if>",
                        "<file(?:[^>\"']|\"[^\"]*\"|'[^']*')*>",
                        "</file>",
                        "<switch(?:[^>\"']|\"[^\"]*\"|'[^']*')*>",
                        "</switch>",
                    ],
                    "color": "Magenta"
                },
                {
                    "patterns": [
                        "<case(?:[^>\"']|\"[^\"]*\"|'[^']*')*>",
                        "</case>",
                        "<default(?:[^>\"']|\"[^\"]*\"|'[^']*')*>",
                        "</default>",
                        "<else(?:[^>\"']|\"[^\"]*\"|'[^']*')*>",
                        "</else>",
                        "<elseif(?:[^>\"']|\"[^\"]*\"|'[^']*')*>",
                        "</elseif>",
                    ],
                    "color": "Green"
                }
            ]
        }
    ]
}